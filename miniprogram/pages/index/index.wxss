/**index.wxss**/
.page {
  min-height: 100vh;
  padding: 0 32rpx 60rpx;
}

/* 头部 */
.header {
  padding: 48rpx 0 32rpx;
}

.header-title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #1d1d1f;
  margin-bottom: 12rpx;
}

.header-subtitle {
  display: block;
  font-size: 26rpx;
  color: #86868b;
}

/* 搜索卡片 */
.search-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.06);
}

.search-input-wrap {
  display: flex;
  align-items: center;
  background: #f5f5f7;
  border-radius: 14rpx;
  padding: 0 24rpx;
  height: 88rpx;
}

.search-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
  opacity: 0.4;
}

.search-input {
  flex: 1;
  font-size: 30rpx;
  color: #1d1d1f;
  letter-spacing: 2rpx;
}

.search-placeholder {
  color: #c7c7cc;
  font-size: 28rpx;
}

.clear-icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 12rpx;
  opacity: 0.35;
}

.search-actions {
  display: flex;
  margin-top: 24rpx;
  gap: 20rpx;
}

.btn-paste {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #f5f5f7;
  color: #1d1d1f;
  border-radius: 14rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.btn-search {
  flex: 2;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #0071e3;
  color: #ffffff;
  border-radius: 14rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.btn-paste:active {
  background: #e8e8ed;
}

.btn-search:active {
  background: #0077ed;
}

/* 提示卡片 */
.tip-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-top: 24rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.06);
}

.tip-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #1d1d1f;
  margin-bottom: 20rpx;
}

.tip-list {
  display: flex;
  flex-direction: column;
  gap: 14rpx;
}

.tip-item {
  font-size: 24rpx;
  color: #6e6e73;
  line-height: 1.6;
}

/* 搜索历史 */
.history-section {
  margin-top: 40rpx;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0 8rpx;
}

.history-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.history-clear {
  font-size: 24rpx;
  color: #0071e3;
}

.history-list {
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.06);
  overflow: hidden;
}

.history-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.history-item:last-child {
  border-bottom: none;
}

.history-item:active {
  background: #f5f5f7;
}

.history-item-info {
  flex: 1;
  overflow: hidden;
}

.history-serial {
  display: block;
  font-size: 28rpx;
  color: #1d1d1f;
  font-weight: 500;
  letter-spacing: 1rpx;
}

.history-model {
  display: block;
  font-size: 22rpx;
  color: #86868b;
  margin-top: 6rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.history-delete {
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  color: #c7c7cc;
  font-size: 36rpx;
  flex-shrink: 0;
}

/* 弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.45);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.modal-dialog {
  width: 560rpx;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 48rpx 40rpx 36rpx;
  text-align: center;
}

.modal-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #1d1d1f;
  margin-bottom: 16rpx;
}

.modal-content {
  display: block;
  font-size: 26rpx;
  color: #6e6e73;
  margin-bottom: 40rpx;
}

.modal-buttons {
  display: flex;
  gap: 20rpx;
}

.modal-btn {
  flex: 1;
  height: 76rpx;
  line-height: 76rpx;
  border-radius: 14rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.modal-btn-cancel {
  background: #f5f5f7;
  color: #1d1d1f;
}

.modal-btn-confirm {
  background: #ff3b30;
  color: #ffffff;
}

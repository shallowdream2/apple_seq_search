/**warranty.wxss**/
.page {
  min-height: 100vh;
  padding: 24rpx 32rpx 80rpx;
}

/* 序列号栏 */
.serial-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx 32rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.05);
}

.serial-label {
  font-size: 26rpx;
  color: #86868b;
}

.serial-value {
  font-size: 28rpx;
  color: #1d1d1f;
  font-weight: 600;
  font-family: 'SF Mono', 'Menlo', monospace;
  letter-spacing: 2rpx;
}

/* 加载状态 */
.loading-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 4rpx solid #e5e5ea;
  border-top-color: #0071e3;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #86868b;
}

/* 验证码卡片 */
.captcha-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx 36rpx;
  margin-top: 24rpx;
  box-shadow: 0 2rpx 24rpx rgba(0, 0, 0, 0.06);
}

.captcha-title {
  display: block;
  font-size: 34rpx;
  font-weight: 700;
  color: #1d1d1f;
  margin-bottom: 12rpx;
}

.captcha-desc {
  display: block;
  font-size: 24rpx;
  color: #86868b;
  margin-bottom: 32rpx;
  line-height: 1.6;
}

.captcha-image-wrap {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 28rpx;
}

.captcha-image {
  width: 360rpx;
  height: 140rpx;
  border-radius: 12rpx;
  border: 2rpx solid #e5e5ea;
  background: #f5f5f7;
}

.captcha-refresh {
  display: flex;
  align-items: center;
  justify-content: center;
}

.refresh-text {
  font-size: 26rpx;
  color: #0071e3;
  font-weight: 500;
}

.captcha-input-wrap {
  background: #f5f5f7;
  border-radius: 14rpx;
  padding: 0 24rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  margin-bottom: 28rpx;
}

.captcha-input {
  flex: 1;
  font-size: 32rpx;
  color: #1d1d1f;
  letter-spacing: 4rpx;
  font-weight: 500;
}

.captcha-placeholder {
  color: #c7c7cc;
  font-size: 28rpx;
  letter-spacing: 0;
  font-weight: 400;
}

.btn-submit {
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #0071e3;
  color: #ffffff;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.btn-submit:active {
  background: #0077ed;
}

/* 状态卡片 */
.status-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 48rpx 36rpx;
  margin-top: 24rpx;
  text-align: center;
  box-shadow: 0 2rpx 24rpx rgba(0, 0, 0, 0.06);
}

.status-active {
  border-top: 6rpx solid #34c759;
}

.status-expired {
  border-top: 6rpx solid #ff9500;
}

.status-needs_verification {
  border-top: 6rpx solid #007aff;
}

.status-unknown {
  border-top: 6rpx solid #86868b;
}

.status-icon {
  display: block;
  font-size: 72rpx;
  margin-bottom: 16rpx;
}

.status-text {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #1d1d1f;
  margin-bottom: 12rpx;
}

.status-desc {
  display: block;
  font-size: 26rpx;
  color: #86868b;
  line-height: 1.6;
}

/* 信息卡片 */
.info-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 12rpx 0;
  margin-top: 20rpx;
  box-shadow: 0 2rpx 24rpx rgba(0, 0, 0, 0.06);
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 36rpx;
  border-bottom: 1rpx solid #f5f5f7;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #86868b;
  flex-shrink: 0;
}

.info-value {
  font-size: 28rpx;
  color: #1d1d1f;
  font-weight: 500;
  text-align: right;
  margin-left: 20rpx;
}

.text-active {
  color: #34c759;
}

.text-expired {
  color: #ff9500;
}

/* 操作按钮 */
.action-section {
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.btn-retry {
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #0071e3;
  color: #ffffff;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.btn-retry:active {
  background: #0077ed;
}

.btn-back {
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #ffffff;
  color: #0071e3;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.btn-back:active {
  background: #f5f5f7;
}

/* 错误状态 */
.error-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 80rpx 40rpx 48rpx;
  text-align: center;
  margin-top: 48rpx;
  box-shadow: 0 2rpx 24rpx rgba(0, 0, 0, 0.06);
}

.error-icon {
  font-size: 72rpx;
  display: block;
  margin-bottom: 24rpx;
}

.error-text {
  display: block;
  font-size: 28rpx;
  color: #6e6e73;
  margin-bottom: 40rpx;
  line-height: 1.6;
}

.error-card .btn-retry {
  margin-bottom: 20rpx;
}

.error-card .btn-back {
  background: #f5f5f7;
  color: #1d1d1f;
  box-shadow: none;
}

/**app.wxss**/
page {
  background: #f5f5f7;
  font-family: -apple-system, 'PingFang SC', 'Helvetica Neue', sans-serif;
  color: #1d1d1f;
  font-size: 28rpx;
  line-height: 1.5;
}

.container {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 0 32rpx;
}

button {
  background: initial;
}

button:focus {
  outline: 0;
}

button::after {
  border: none;
}
